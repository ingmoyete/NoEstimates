<!--Model[0] -> Id of the modal-->
<!--Model[1] -> Heading  of the modal-->

@model string[]

<div class="modal fade insertAndEditProject" id="@Model[0]" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="modalForm-@Model[0]">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">@Model[1]</h4>
                </div>
                <div class="modal-body">
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore
                    <input name="Id" type="hidden" class="form-control" value="-1" />
                    <div class="form-group">
                        <label class="control-label">Name </label>
                        <input name="Name" class="form-control">
                    </div>
                    <div class="form-group">    
                        <label class="control-label">Description</label>
                        <textarea name="Description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default js-closeModal" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary js-submit">Save changes</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>