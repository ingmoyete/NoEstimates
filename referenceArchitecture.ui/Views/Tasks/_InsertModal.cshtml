<!--Model -> Id of the modal-->

@model string

<div class="modal fade" id="@Model" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="modalForm-@Model">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">@LocalResources["modalTaskHeading"]</h4>
                </div>
                <div class="modal-body">
                    @LocalResources["modalTaskSubH"]
                    <input name="RequirementId" type="hidden" class="form-control" value="-1" />

                    <div class="form-group">
                        <label class="control-label">Description</label>
                        <textarea name="Description" class="form-control" rows="10"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default js-closeModal" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary js-submit">Save changes</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
